{
  "name": "ollama-visual-manager",
  "version": "1.0.0",
  "description": "跨平台Ollama可视化管理工具",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "build": "vite build",
    "electron-build": "electron-builder",
    "test": "jest",
    "dev:electron": "concurrently \"npm run dev\" \"npm start\""
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "axios": "^1.6.0",
    "recharts": "^2.10.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "vite": "^5.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "eslint": "^8.53.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^5.16.5",
    "concurrently": "^7.6.0"
  },
  "build": {
    "appId": "com.ollama.visualmanager",
    "productName": "Ollama Visual Manager",
    "copyright": "Copyright © 2026 Ollama Visual Manager",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "asar": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64"]
        }
      ],
      "asar": true
    },
    "linux": {
      "target": ["AppImage"],
      "asar": true
    },
    "asarUnpack": [],
    "compression": "maximum",
    "afterPack": "scripts/afterPack.js"
  }
}
